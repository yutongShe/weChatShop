/* pages/detail/detail.wxss */
.title{
  display: block;
  text-align: center;
  font-size: 50rpx;
  font-weight: 500;
  margin: 10rpx 0;
}

scroll-view{
  width: 100%;
  height: 100vh;
}

swiper{
  width: 96%;
  height: 490rpx;
  margin:0 16rpx;
}

swiper video,image{
  width:100%;
  border-radius: 16rpx;
}

.info{
  width: 96%;
  display: flex;
  margin:0 16rpx;
  flex-direction: row;
  background-color: rgb(245, 192, 201);
  justify-content: space-around;
  border-radius: 16rpx;
}

.info text{
  font-size: 40rpx;
  color: white;
  line-height: 80rpx;
}

.info .price{
  color: red;
}

.bottom{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: rgb(245, 192, 201);
}

.bottom button{
  border: 4rpx solid rgb(241, 113, 134);
  width: 50%;
  color: white;
  background-color: rgb(245, 192, 201);
}